{% extends 'front.html.twig' %}

{% block main %}
    <!-- Page Add Section Begin -->
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="page-breadcrumb">
                        <h2>Cart<span>.</span></h2>
                        <a href="#">Home</a>
                        <a class="active" href="#">Cart</a>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Page Add Section End -->
    <!-- Cart Page Section Begin -->
    <div class="cart-page">
        <div class="container">
            <div class="cart-table">
                <table class="table">
                    <thead>
                    <tr>
                        <th class="product-h">Product</th>
                        <th>Price</th>
                        <th class="quan">Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    {% set total=0 %}
                    {% for l in lignecmd %}
                        {% if l.etat == 0 %}
                    <tbody>
                    <tr>
                        <td class="product-col">
                            <img src="{{ asset('produit/uploads/images/' ~ l.produit.image ) }}" alt="">
                            <div class="p-title">
                                <h5>{{ l.produit.libelle }}</h5>
                            </div>
                        </td>
                        <td class="price-col">{{ l.produit.prix }}</td>
                        <td class="quantity-col" style="font-style: inherit; font-weight: bold">{{ l.quantite }}</td>
                        <td class="total" >{{ l.produit.prix * l.quantite }} DT</td>
                        <td class="product-close"><a href="{{ path('lignecommande_supprimer_client',{id:l.id}) }}" style="color: #0b0b0b"> X</td>
                    </tr>
                    </tbody>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="shopping-method">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shipping-info">
                            <h5>Choose a shipping</h5>
                            <div class="chose-shipping">
                                <div class="cs-item">
                                    <input type="radio" name="cs" id="one">
                                    <label for="one" class="active">
                                        Free Standard shhipping
                                        <span>Estimate for New York</span>
                                    </label>
                                </div>
                                <div class="cs-item">
                                    <input type="radio" name="cs" id="two">
                                    <label for="two">
                                        Next Day delievery 10DT
                                    </label>
                                </div>
                                <div class="cs-item last">
                                    <input type="radio" name="cs" id="three">
                                    <label for="three">
                                        In Store Pickup - Free
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="total-info">

                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <a href="{{path('commande_ajout_client')}}" class="primary-btn chechout-btn">Proceed to checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart Page Section End -->

{% endblock %}